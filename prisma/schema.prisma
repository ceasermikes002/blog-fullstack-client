// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  slug          String   @unique
  featuredImage String?
  draft         Boolean  @default(true)
  createdAt     DateTime @default(now())
}

model User {
  id            String   @id
  email         String   @unique
  createdAt     DateTime @default(now())
}
